<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Topjava</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mealServlet</servlet-name>
        <url-pattern>/meals</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createMealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.CreateMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createMealServlet</servlet-name>
        <url-pattern>/meals/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteMealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.DeleteMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteMealServlet</servlet-name>
        <url-pattern>/meals/del</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editMealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.EditMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editMealServlet</servlet-name>
        <url-pattern>/meals/edit</url-pattern>
    </servlet-mapping>

</web-app>
